{
  "manifest_version": 3,
  "name": "截全屏图",
  "version": "1.0",
  "description": "全屏截图实验",
  "action": {
    "default_icon": "/images/icon.png",
    "default_title": "插件图标上显示的内容",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker":"background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "desktopCapture",
    "activeTab"
  ]
}